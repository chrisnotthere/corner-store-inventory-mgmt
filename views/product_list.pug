extends layout

block content
  h1= title

  ul
    each product in product_list
      li
        a(href=product.url) #{product.name}
        |  ($#{product.price}) - #{product.category.name}

    else
      li There are no products to display.

  a(href='/store/product/create')
    button.btn.btn-primary(type='button') Create Product
