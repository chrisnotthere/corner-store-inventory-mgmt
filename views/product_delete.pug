
extends layout

block content

  h1= title
  
  p #[strong Do you really want to delete this product?]
  
  div(style="margin-left:20px")

    p #[strong ID]: #{product._id}
  
    p #[strong Name:] 
      a(href=product.url) #{product.name}

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=product._id )

    button.btn.btn-primary(type='submit') Delete
