extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Category Name' name='name' required='true' value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='textarea' placeholder='Category Description' name='description' required='true' value=(undefined===category ? '' : category.description) )
    input#image.form-control(type='hidden' name='image' required='true' value='newcategory.jpg' )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
